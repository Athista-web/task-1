{"sections":{"main":{"type":"main-product","blocks":{"vendor":{"type":"text","settings":{"text":"{{ product.vendor }}","text_style":"uppercase"}},"title":{"type":"title","settings":{}},"price":{"type":"price","settings":{}},"variant_picker":{"type":"variant_picker","settings":{"picker_type":"button"}},"quantity_selector":{"type":"quantity_selector","settings":{}},"custom_liquid_r7hExp":{"type":"custom_liquid","settings":{"custom_liquid":"<div class=\"postcode-checker\">\n  <p class=\"title\">Find out if we deliver to your area<\/p>\n\n  <input id=\"postcodeInput\" type=\"text\" placeholder=\"Enter postcode\" maxlength=\"4\">\n  <button type=\"button\" id=\"checkPostcodeBtn\">Check<\/button>\n\n  <p id=\"postcodeResult\"><\/p>\n\n  <div id=\"notServiceArea\" class=\"not-service\">\n    <p><strong>Currently we don’t service your area<\/strong><\/p>\n    <button type=\"button\" id=\"openFormBtn\">Click here<\/button>\n  <\/div>\n\n  <div id=\"postcodeForm\" class=\"postcode-form\">\n    <form method=\"post\" action=\"\/contact#contact_form\">\n      <input type=\"hidden\" name=\"form_type\" value=\"contact\">\n      <input type=\"hidden\" name=\"utf8\" value=\"✓\">\n\n      <input type=\"text\" name=\"contact[name]\" placeholder=\"Your name\" required>\n      <input type=\"email\" name=\"contact[email]\" placeholder=\"Email\" required>\n      <input type=\"text\" name=\"contact[postcode]\" placeholder=\"Postcode\" required>\n\n      <textarea name=\"contact[message]\" placeholder=\"Message\"><\/textarea>\n\n      <button type=\"submit\">Submit<\/button>\n    <\/form>\n  <\/div>\n<\/div>\n\n<style>\n.postcode-checker {\n  border: 1px solid #ddd;\n  padding: 16px;\n  border-radius: 8px;\n  margin-top: 16px;\n  background: #fafafa;\n}\n\n.postcode-checker input,\n.postcode-checker textarea {\n  width: 100%;\n  padding: 10px;\n  margin-top: 8px;\n  border: 1px solid #ccc;\n  border-radius: 6px;\n}\n\n.postcode-checker button {\n  width: 100%;\n  margin-top: 10px;\n  padding: 10px;\n  background: #000;\n  color: #fff;\n  border: none;\n  border-radius: 6px;\n  cursor: pointer;\n}\n\n.postcode-checker button:hover {\n  opacity: 0.9;\n}\n\n#postcodeResult {\n  margin-top: 10px;\n  font-size: 14px;\n}\n\n.not-service,\n.postcode-form {\n  display: none;\n  margin-top: 12px;\n}\n<\/style>\n\n<script>\ndocument.addEventListener(\"DOMContentLoaded\", function () {\n\n  const input = document.getElementById(\"postcodeInput\");\n  const btn = document.getElementById(\"checkPostcodeBtn\");\n  const result = document.getElementById(\"postcodeResult\");\n  const notService = document.getElementById(\"notServiceArea\");\n  const form = document.getElementById(\"postcodeForm\");\n  const openFormBtn = document.getElementById(\"openFormBtn\");\n\n  btn.addEventListener(\"click\", function () {\n\n    const postcode = input.value.trim();\n\n    result.textContent = \"\";\n    notService.style.display = \"none\";\n    form.style.display = \"none\";\n\n    if (postcode.length !== 4) {\n      result.textContent = \"Please enter a valid 4 digit postcode\";\n      result.style.color = \"red\";\n      return;\n    }\n\n    fetch(\"https:\/\/api.zippopotam.us\/au\/\" + postcode)\n      .then(res => {\n        if (!res.ok) throw new Error();\n        return res.json();\n      })\n      .then(data => {\n        const state = data.places[0][\"state abbreviation\"];\n        const area = data.places[0][\"place name\"];\n\n        if (state === \"SA\") {\n          result.textContent =\n            \"Free delivery available in \" + area + \", South Australia\";\n          result.style.color = \"green\";\n        } else {\n          result.textContent =\n            \"Currently we don’t service \" + area;\n          result.style.color = \"red\";\n          notService.style.display = \"block\";\n        }\n      })\n      .catch(() => {\n        result.textContent = \"Postcode not found\";\n        result.style.color = \"red\";\n      });\n  });\n\n  openFormBtn.addEventListener(\"click\", function () {\n    form.style.display = \"block\";\n  });\n\n});\n<\/script>"}},"buy_buttons":{"type":"buy_buttons","settings":{"show_dynamic_checkout":true,"show_gift_card_recipient":false}},"description":{"type":"description","settings":{}},"share":{"type":"share","settings":{"share_label":"Share"}}},"block_order":["vendor","title","price","variant_picker","quantity_selector","custom_liquid_r7hExp","buy_buttons","description","share"],"settings":{"enable_sticky_info":true,"media_size":"large","constrain_to_viewport":true,"media_fit":"contain","gallery_layout":"stacked","media_position":"left","image_zoom":"lightbox","mobile_thumbnails":"hide","hide_variants":true,"enable_video_looping":false,"padding_top":36,"padding_bottom":12}},"related-products":{"type":"related-products","settings":{"heading":"You may also like","heading_size":"h2","products_to_show":4,"columns_desktop":4,"color_scheme":"background-1","image_ratio":"square","show_secondary_image":true,"show_vendor":false,"show_rating":false,"columns_mobile":"2","padding_top":36,"padding_bottom":28}}},"order":["main","related-products"]}